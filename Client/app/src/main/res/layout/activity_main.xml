<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        
        <EditText
            android:id="@+id/appNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter App Name"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/submitAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send App Name"
            android:layout_marginBottom="16dp" />

        
        <EditText
            android:id="@+id/appLinkInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Play Store Link"
            android:inputType="textUri"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/submitAppLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send App Link"
            android:layout_marginBottom="16dp" />

        
        <Button
            android:id="@+id/selectApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select APK File"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/selectedFileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/uploadApk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload APK File"
            android:layout_marginBottom="16dp" />

        
        <Button
            android:id="@+id/fetchJsonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch Result"
            android:layout_marginBottom="8dp" />

        
        <TextView
            android:id="@+id/jsonResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result will appear here"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>
